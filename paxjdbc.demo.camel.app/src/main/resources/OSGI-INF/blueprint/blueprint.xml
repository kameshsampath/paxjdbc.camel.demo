<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

		<reference id="sqlSessionFactory" interface="org.apache.ibatis.session.SqlSessionFactory"
		           filter="(environment=development)(sourceDS=demodbDS)"/>

		<!-- Configure Camel MyBatis Component -->
		<bean id="mybatis" class="org.apache.camel.component.mybatis.MyBatisComponent">
				<property name="sqlSessionFactory" ref="sqlSessionFactory"/>
		</bean>

		<camelContext xmlns="http://camel.apache.org/schema/blueprint">

				<route id="selectPersons">
						<from uri="timer://selectPersons?period=1h"/>
						<to uri="mybatis:selectAllPersons?statementType=SelectList"/>
						<to uri="mock:result"/>
				</route>

		</camelContext>

</blueprint>
